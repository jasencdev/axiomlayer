{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "docker:enableMajor",
    ":disableRateLimiting"
  ],
  "timezone": "America/New_York",
  "schedule": ["after 9am and before 5pm every weekday"],
  "labels": ["dependencies", "renovate"],
  "commitMessagePrefix": "chore(deps):",
  "kubernetes": {
    "fileMatch": ["\\.yaml$"]
  },
  "packageRules": [
    {
      "description": "Group all patch updates",
      "matchUpdateTypes": ["patch"],
      "groupName": "patch updates",
      "automerge": true
    },
    {
      "description": "Group all minor updates",
      "matchUpdateTypes": ["minor"],
      "groupName": "minor updates"
    },
    {
      "description": "Docker digest updates",
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["digest"],
      "groupName": "docker digests",
      "schedule": ["after 9am on monday"]
    },
    {
      "description": "GitHub Actions",
      "matchManagers": ["github-actions"],
      "groupName": "github actions",
      "automerge": true
    }
  ],
  "regexManagers": [
    {
      "description": "Update container image digests in Kubernetes manifests",
      "fileMatch": ["\\.yaml$"],
      "matchStrings": [
        "image:\\s*(?<depName>[^@\\s]+)@(?<currentDigest>sha256:[a-f0-9]+)"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    }
  ]
}
